<!doctype html>
<html>
<head>
    <title>Inbox</title>
    <link rel="stylesheet" href="css/inbox.css">
    <style>
    </style>
</head>
<body>
<div class="container">

    <h1>Hello <%= typeof fullName !== "undefiend" && fullName ? fullName : "" %>, this is your inbox</h1>
    <div class = "nav">
    <a href="/compose-message">Compose message</a>
    <a href="/logout">Logout</a>
    <a href="/outbox">Outbox</a>
    </div>
    <%
    if(typeof data !== "undefined" && data.items.length) {
        const items = data.items;
        %>
        <form id="delete-form">
            <button type="submit">Delete</button>
        <input name="deleteAction" value="receiver" hidden/>
        <table id="message-table">
            <tr>
                <th style="width:5%;"></th>
                <th style="width:30%;">Sender</th>
                <th style="width:30%;">Subject</th>
                <th style="width:30%;">Message</th>
                <th style="width:30%;">Send at</th>

            </tr>
        <%
        for ( var i = 0; i < items.length; i++ )
        {
            %>
                <tr id="row-<%= items[i].id %>">
                    <td class = "checkbox"><input type="checkbox" id="<%= items[i].id %>" name="ids" value="<%= items[i].id %>"></td>
                    <td><%= items[i].sender %></td>
                    <td>
                        <a href="/message/<%= items[i].id %>"><%= items[i].subject %></a>
                    </td>
                    <td><%= items[i].message %></td>
                    <td><%= Intl.DateTimeFormat(undefined, {
                        timeStyle: "medium",
                        dateStyle: "medium",
                    }).format(new Date(items[i].sendAt)) %></td>

                </tr>
            <%
        } %>
        </table>
        </form>
        <%
    }
    %>
    <%
    if(typeof data !== "undefined" && data.totalPage) {
        const totalPage = data.totalPage;
        %><div class="pagination">
        <%
        for ( var i = 1; i <= totalPage; i++ )
        {
            %>
            <a href="/?pageNumber=<%=i %>"><%=i %></a>
            <%
        } %>
        </div>
        <%
    }
    %>
    
</div>

<script>
    document.addEventListener("DOMContentLoaded", (event) => {
        const form = document.getElementById("delete-form");
        form.addEventListener("submit", (event) => {
            event.preventDefault();
            const ids = document.getElementsByName("ids");
            const deleteAction = document.getElementsByName("deleteAction");
            const data = {
                ids: [],
                deleteAction: deleteAction[0].value,
            };
            ids.forEach(id => {
                if(id.checked) {
                    data.ids.push(id.value);
                }
            })
            const params = new URLSearchParams();
            params.set("action", data.deleteAction);
            data.ids.forEach(id => {
                params.append("ids", id);
            })
            fetch("/api/delete/?" + params.toString(), {
                method: "DELETE",
            }).then(res => res.json()).then(res => {

                data.ids.forEach(id => {
                    const row = document.getElementById("row-" + id);
                    row.remove();
                })
            });
        });
    });
</script>
</body>
</html>