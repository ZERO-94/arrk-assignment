<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <style>
        body         { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span> Compose email</h1>

    <% if (typeof(error) !== "undefined" && error) { %>
        <span style="color: red;"><%= error %></>
    <% } %>


    <form action="/compose-message" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Receiver</label>
            <select id="receiver" name="receiver">

                <%
                if(typeof emails !== "undefined" && emails) {
                    for ( var i = 0; i < emails.length; i++ )
                    {
                        const selected = typeof(input) !== 'undefined' && input.receiver === emails[ i ] ? 'selected' : '';
                        %><option class="form-control" value="<%=emails[ i ] %>" <%=selected %>><%=emails[ i ] %></option><%
                    }
                }
                %>
                </select>
        </div>
        <div class="form-group">
            <label>Subject</label>
            <input type="text" class="form-control" name="subject" value="<%= typeof(input) !== 'undefined' ? input.subject : '' %>">
        </div>
        <div class="form-group">
            <label>Content</label>
            <textarea class="form-control" name="message"><%= typeof(input) !== 'undefined' ? input.message : '' %></textarea>
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Send</button>
    </form>

</div>
</div>
</body>
</html>